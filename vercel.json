{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app.py"
        }
    ],
    "crons": [
        {
            "path": "/sync-devices",
            "schedule": "*/2 * * * *"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.12"
    }
}